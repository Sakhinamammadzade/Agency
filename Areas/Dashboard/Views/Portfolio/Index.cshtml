@model List<Portfolio>

    <a class="btn btn-primary btn-sm" href="/dashboard/portfolio/create">Create</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Photo</th>
            <th scope="col">Category</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>

                <td>
                    <img src="~/@item.PhotoUrl" width="150" />
                </td>
                  <td>@item.Category.CategoryName</td>
                <td>
                    <a href="/dashboard/portfolio/edit/@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a href="/dashboard/portfolio/detail/@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                    <a href="/dashboard/portfolio/delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>